<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profile_image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/default_profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_name"
        android:text="Sample Name"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_baseline_account_circle_blue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_mobile"
        android:text="+1 999999999"
        android:textColor="@android:color/black"
        android:layout_marginLeft="40dp"
        android:textSize="16dp"
        android:drawableLeft="@drawable/ic_baseline_local_phone_blue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_email"
        android:text="example@gmail.com"
        android:textColor="@android:color/black"
        android:layout_marginLeft="40dp"
        android:textSize="16dp"
        android:drawableLeft="@drawable/ic_baseline_mail_blue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_city"
        android:text="Telangana"
        android:textColor="@android:color/black"
        android:layout_marginLeft="40dp"
        android:textSize="16dp"
        android:drawableLeft="@drawable/ic_baseline_person_pin_circle_blue"
        />




</LinearLayout>